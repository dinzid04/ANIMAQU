extends layout

block content
  div(class="container mx-auto px-4 py-6")
    div(class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 md:p-8 mb-8")
      h1(class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4 text-center") Cari Anime
      p(class="text-gray-600 dark:text-gray-300 text-center mb-6 max-w-2xl mx-auto") Temukan anime favoritmu dengan mudah. Masukkan judul atau kata kunci untuk memulai pencarian.
      form(action="/search" method="GET" class="max-w-2xl mx-auto")
        div(class="relative")
          input(
            type="text"
            name="q"
            placeholder="Ketik judul anime..."
            value=keyword || ""
            class="w-full px-6 py-4 pr-16 border-2 border-gray-200 dark:border-gray-600 rounded-full bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-4 focus:ring-primary-300 dark:focus:ring-primary-600 focus:border-transparent transition-all duration-300"
            required
          )
          button(
            type="submit"
            class="absolute right-2 top-1/2 -translate-y-1/2 p-3 bg-primary-600 text-white rounded-full hover:bg-primary-700 transition-colors focus:outline-none focus:ring-4 focus:ring-primary-300"
          )
            svg(class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z")

    div(class="grid grid-cols-1 lg:grid-cols-4 gap-8")
      div(class="lg:col-span-3")

        if keyword && searchResults
          if searchResults.length > 0
            div(class="mb-6")
              h2(class="text-2xl font-bold text-gray-900 dark:text-gray-100") Hasil Pencarian untuk "#{keyword}"
              p(class="text-gray-600 dark:text-gray-300 mt-1") Ditemukan #{searchResults.length} hasil
            
            div(class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8")
              each anime in searchResults
                a(href=`/anime/${anime.slug}` class="group bg-white dark:bg-gray-800 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 flex items-center space-x-4 overflow-hidden")
                  div(class="flex-shrink-0")
                    img(src=anime.poster alt=anime.title class="w-24 h-36 object-cover")
                  div(class="flex-1 py-4 pr-4")
                    h3(class="font-bold text-md text-gray-900 dark:text-gray-100 line-clamp-2 group-hover:text-primary-600 transition-colors")= anime.title
                    if anime.genres && anime.genres.length > 0
                      p(class="text-xs text-gray-500 dark:text-gray-400 mt-1 line-clamp-1")= anime.genres.map((g) => g.name).join(', ')
                    if anime.rating
                      div(class="flex items-center mt-2")
                        svg(class="w-4 h-4 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20")
                          path(d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z")
                        span(class="text-sm font-medium text-gray-700 dark:text-gray-200")= anime.rating

        else if !keyword
          div(class="text-center py-12")
            svg(class="w-16 h-16 text-gray-400 dark:text-gray-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z")
            h3(class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2") Cari Anime Favorit Anda
            p(class="text-gray-600 dark:text-gray-300 mb-6") Masukkan judul anime yang ingin Anda tonton
            
            div(class="max-w-md mx-auto")
              h4(class="font-medium text-gray-900 dark:text-gray-100 mb-3") Pencarian Populer:
              div(class="flex flex-wrap gap-2 justify-center")
                each term in ['Naruto', 'One Piece', 'Attack on Titan', 'Demon Slayer', 'Jujutsu Kaisen', 'My Hero Academia']
                  a(href=`/search?q=${encodeURIComponent(term)}` class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-200 text-sm rounded-full hover:bg-primary-100 hover:text-primary-700 transition-colors")= term

        if adSlots && adSlots.contentBottom && adSlots.contentBottom.length > 0
          div(class="mb-6")
            each ad in adSlots.contentBottom
              div(class="ad-slot bg-gray-100 dark:bg-gray-800 rounded-lg")!= ad.content

      div(class="lg:col-span-1")
        if adSlots && adSlots.sidebarTop && adSlots.sidebarTop.length > 0
          div(class="mb-6")
            each ad in adSlots.sidebarTop
              div(class="ad-slot bg-gray-100 dark:bg-gray-800 rounded-lg")!= ad.content

        div(class="bg-white dark:bg-gray-900 rounded-lg shadow-sm p-6 mb-6")
          h3(class="font-bold text-gray-900 dark:text-gray-100 mb-4") Tips Pencarian
          div(class="space-y-3 text-sm text-gray-600 dark:text-gray-300")
            div(class="flex items-start")
              svg(class="w-4 h-4 text-primary-600 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
              span Gunakan kata kunci yang spesifik untuk hasil yang lebih akurat
            div(class="flex items-start")
              svg(class="w-4 h-4 text-primary-600 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
              span Coba gunakan judul bahasa Inggris atau Jepang
            div(class="flex items-start")
              svg(class="w-4 h-4 text-primary-600 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
              span Gunakan kata kunci yang lebih umum jika tidak menemukan hasil

        div(class="bg-white dark:bg-gray-900 rounded-lg shadow-sm p-6 mb-6")
          h3(class="font-bold text-gray-900 dark:text-gray-100 mb-4") Genre Populer
          div(class="flex flex-wrap gap-2 max-h-[200px] overflow-x-hidden")
            each genre in genres
              a(href=`/genres/${genre.slug}` class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-200 text-sm rounded-full hover:bg-primary-100 hover:text-primary-700 transition-colors")= genre.name

        div(class="bg-white dark:bg-gray-900 rounded-lg shadow-sm p-6 mb-6")
          h3(class="font-bold text-gray-900 dark:text-gray-100 mb-4") Menu Cepat
          div(class="space-y-3")
            a(href="/ongoing" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary-600 transition-colors")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z")
              span Anime Ongoing
            a(href="/complete" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary-600 transition-colors")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z")
              span Anime Complete
            a(href="/genres" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary-600 transition-colors")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z")
              span Genre Anime

        if adSlots && adSlots.sidebarBottom && adSlots.sidebarBottom.length > 0
          div(class="mb-6")
            each ad in adSlots.sidebarBottom
              div(class="ad-slot bg-gray-100 dark:bg-gray-800 rounded-lg")!= ad.content

block scripts
  script.
    document.addEventListener('DOMContentLoaded', function() {
      const searchInput = document.querySelector('input[name="q"]');
      if (searchInput && !searchInput.value) {
        searchInput.focus();
      }
    });

    const searchInput = document.querySelector('input[name="q"]');
    let searchTimeout;

    if (searchInput) {
      searchInput.addEventListener('input', function() {
        const query = this.value.trim();
        
        clearTimeout(searchTimeout);
        
        if (query.length >= 2) {
          searchTimeout = setTimeout(() => {
            console.log('Search suggestion for:', query);
          }, 300);
        }
      });
    }

    if (typeof gtag !== 'undefined' && '#{keyword}') {
      gtag('event', 'search', {
        search_term: '#{keyword}',
        results_count: #{searchResults ? searchResults.length : 0}
      });
    }
